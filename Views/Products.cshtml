            <div class="whiteLineHorizontalMale" id="ProductsMale"></div>
            <div class="whiteLineHorizontalFemale" id="ProductsFemale"></div>
       </div>
        
         <div id="MaleFemaleSubCat">
            <div id="MaleSubCatContainer">
                <div id="MaleSubCatItemsContainer">
                    <div id="Coveralls" class="MaleItem" title="Coverall">
                        <div class="ProdIcon"></div>
                        <div class="SubCatTitle">COVERALL</div>
                    </div>
                    <div id="Jackets" class="MaleItem" title="Jackets">
                        <div class="ProdIcon"></div>
                        <div class="SubCatTitle">JACKETS</div>
                    </div>
                    <div id="Shirts" class="MaleItem" title="Shirts">
                        <div class="ProdIcon"></div>
                        <div class="SubCatTitle" style="margin-left: 12px;">SHIRTS</div>
                    </div>
                    <div id="Pants" class="MaleItem" title="Pants">
                        <div class="ProdIcon"></div>
                        <div class="SubCatTitle" style="margin-left: 12px;">PANTS</div>
                    </div>
                    <div id="Winter" class="MaleItem"  title="Winter">
